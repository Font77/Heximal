<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.blogspot.electrail.bindecihex.MainActivity"
    android:textAlignment="viewStart">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/let_apos_s_convert"
        android:id="@+id/letsconvert"
        android:layout_marginTop="43dp"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/numInput"
        android:text="@string/value"
        android:inputType="none"
        android:textAlignment="center"
        android:textSize="35sp"
        android:layout_below="@+id/letsconvert"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/to"
        android:id="@+id/to"
        android:textSize="20sp"
        android:layout_below="@+id/in"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/final_spinner"
        android:layout_alignTop="@+id/to"
        android:layout_alignBottom="@+id/to"
        android:layout_toRightOf="@+id/to"
        android:layout_toLeftOf="@+id/result"
        android:layout_toStartOf="@+id/result"
        android:layout_marginLeft="30dp"
        android:textAlignment="textStart" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/result"
        android:textSize="30sp"
        android:layout_below="@+id/goButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/in"
        android:id="@+id/in"
        android:textSize="20sp"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/numInput"
        android:layout_alignRight="@+id/to"
        android:layout_alignEnd="@+id/to" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/first_spinner"
        android:layout_alignLeft="@+id/final_spinner"
        android:layout_alignStart="@+id/final_spinner"
        android:layout_above="@+id/to"
        android:layout_alignRight="@+id/result"
        android:layout_alignEnd="@+id/result"
        android:layout_alignTop="@+id/in" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go"
        android:id="@+id/goButton"
        android:textSize="30sp"
        android:layout_alignBottom="@+id/final_spinner"
        android:layout_toRightOf="@+id/result"
        android:layout_alignRight="@+id/numInput"
        android:layout_alignEnd="@+id/numInput"
        android:layout_alignTop="@+id/first_spinner" />



</RelativeLayout>